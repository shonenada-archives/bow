body
  font-size 14px
  padding 0
  margin 0

a
  color #999
  text-decoration none

ul, li
  padding 0
  margin 0
  list-style none

.wrapper
  margin 0 auto
  width 80%

.text-center
  text-align center

.header-navbar
  position fixed
  top 0
  left 0
  height 55px
  width 100%
  background-color #444
  color #fafafa
  line-height 55px
  font-size 14px
  padding 0 50px

  a
    color #fafafa

  .logo
    display inline-block
    font-size 24px

  .navbar
    float right
    ul > li
      display inline-block
      margin 0px 5px

.submit-form,
.form
  margin-top 30px

  section
    padding 5px
    margin 5px

  label
    display inline-block
    width 100px
    font-size 16px
    text-align right

  input[type='text'],
  input[type='password'],
  input[type='email']
    width 25em
    padding 10px
    border-radius 6px
    border 2px solid #e5e5e5
    background-color #f8f8f8
    font-size 16px
    font-weight 200
  
    &:focus
      border-color #e89980
      border-width 2px

  .error-msg
    color #e89990
    pass

  button
    border-radius 6px
    background-color #737373
    color #fff
    border none
    padding 0 3em
    font-size 18px
    font-weight 400
    height 2.6em
    line-height 2.6em
    margin 20px auto
