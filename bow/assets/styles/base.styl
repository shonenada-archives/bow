@import "_const"

body
  font-size 14px
  padding 0
  margin 0

a
  color #999
  text-decoration none

ul, li
  padding 0
  margin 0
  list-style none

table
  margin 0 0 2em 0
  width 100%

  tbody tr
    border 1px solid $main-border-color
    border-left 0
    border-right 0

    &:nth-child(2n + 1)
      background-color $light-bg-color

  td
    padding 0.75em 0.75em 0.75em

  th
    color #646464
    font-size 0.9em
    font-weight 300
    padding 0 0.75em 0.75em 0.75em
    text-align left

  thead
    border-bottom 2px solid $main-border-color

  tfoot
    border-top 2px solid $main-border-color

  &.alt
    border-collapse separate

    tbody tr
      td
        border 1px solid $main-border-color
        border-left-width 0
        border-top-width 0

        &:first-child
          border-left-width 1px

      &:first-child td
        border-top-width 1px

    thead
      border-bottom 0

    tfoot
      border-top 0


.wrapper
  margin 0 auto
  width 80%

.text-center
  text-align center

.header-navbar
  position fixed
  top 0
  left 0
  height 55px
  width 100%
  background-color #444
  color #fafafa
  line-height 55px
  font-size 14px
  padding 0 50px

  a
    color #fafafa

  .logo
    display inline-block
    font-size 24px

  .navbar
    float right
    ul > li
      display inline-block
      margin 0px 5px

form,
.form
  margin-top 30px

  section
    padding 5px
    margin 5px

  label
    display inline-block
    width 100px
    font-size 16px
    text-align right

  input[type='text'],
  input[type='password'],
  input[type='email'],
  textarea
    width 25em
    padding 10px
    border-radius 6px
    border 2px solid #e5e5e5
    background-color #f8f8f8
    font-size 16px
    font-weight 200
  
    &:focus
      border-color #e89980
      border-width 2px

  .error-msg
    color #e89990
    pass

  button
    border-radius 6px
    background-color #737373
    color #fff
    border none
    padding 0 3em
    font-size 18px
    font-weight 400
    height 2.6em
    line-height 2.6em
    margin 20px auto
