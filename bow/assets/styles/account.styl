@require "_const"
@import "_func"

.container
  height 100vh
  background-color $main-bg-color
  padding 100px 100px

  h2
    color #777
    width 40%
    margin 0 auto
    text-align center
    font-size 2.5em
    padding-bottom 20px
    border-bottom 2px solid $main-border-color
    margin-bottom 40px

.content-box
  background #fff
  padding 30px 50px 30px 50px
  margin 0 auto
  border-radius 6px
  box-shadow 0 2px 0 0 $main-border-color
  width 60%

.content-box.small-box
  width 40%

.content-box.large-box
  width 80%
